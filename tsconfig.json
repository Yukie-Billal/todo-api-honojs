{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",

    "esModuleInterop": true,
    // "customConditions": ["module"],
    // "noEmit": true,
    "allowImportingTsExtensions": false,
    // "allowArbitraryExtensions": true,
    // "verbatimModuleSyntax": true,
    // "sourceMap": true
  } ,
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "./node_modules"
  ]
}